<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#162576"
    android:orientation="vertical"
    tools:context="com.example.mikeias.quiz.Activity.RespostaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgResposta"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/positivo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parabéns você acertou!"
            android:textSize="28sp"
            android:textColor="#CCC"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/jogarNovamente"
            android:onClick="btnJogarNovamenteOnClick"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Jogar Novamente"
            android:background="@drawable/btn_jogar"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btn_ranking"
            android:onClick="btnRankingOnClick"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Ranking"
            android:background="@drawable/btn_jogar"
            android:textColor="#FEBB49"/>
    </LinearLayout>

</LinearLayout>
